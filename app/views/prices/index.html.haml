= javascript_pack_tag "prices/index", media: "all", "data-turbolinks-track": "reload"
= render partial: "confirmation_modal"
= render partial: "new_modal"
.row
  .col-md-12.col-lg-10.offset-lg-1
    .form-row
      .col-12
        .card
          .card-header
            .row
              .col-8
                %h4.text-primary 
                  %b= t('prices.title')
              .col-4.text-right
                %button.btn.btn-primary{onclick: "show_new_price_modal()"}
                  = t('prices.new_modal.upload')
                = link_to t('prices.new'), new_price_path, class: "btn btn-primary"
          .card-body
            .form-row
              .col-12.mb-2
            = search_form_for @q, url: prices_path do |f|
              .form-row
                .col-1
                  .imput-group.mb-3
                    %b= t('.initial_price')
                    .input-group-prepend
                      .input-group-text
                        %i.fas.fa-coins
                      = f.search_field :price_product_price_gteq, class: 'form-control'
                .col-1
                  .imput-group.mb-3
                    %b= t('.final_price')
                    .input-group-prepend
                      .input-group-text
                        %i.fas.fa-coins
                      = f.search_field :price_product_price_lteq, class: 'form-control'
                .col-2
                  .imput-group.mb-3
                    %b= t('prices.code')
                    .input-group-prepend
                      .input-group-text
                        %i.fas.fa-barcode
                      = f.search_field :code_cont, class: 'form-control'
                .col-5
                  .imput-group.mb-3
                    %b= t('prices.material')
                    .input-group-prepend
                      .input-group-text
                        %i.fas.fa-signature
                      = f.search_field :material_name_cont, class: 'form-control'
                .col-2.text-center
                  %label 
                  %br
                  %button.btn.btn-purple{ type: "submit", value: "Search"}
                    %i.fas.fa-search.fa-sm
                    = t('prices.search')
  .col-12
    - if @products.length > 0
      %table.table.table-sm.table-striped
        %thead
          %tr.bg-primary.text-light
            %th= t('prices.code')
            %th= t('prices.brand')
            %th= t('prices.material')
            %th= t('prices.measure_unit')
            %th= t('prices.price')
            %th
        %tbody
          - @products.each do |product|
            %tr
              %td= product.code
              %td= product.brand.name
              %td= product.material.name
              %td= product.measure_unit.name
              %td
                - price = product.price
                = form_for price do |f|
                  %span{id: "title_price_#{price.id}"}= price.product_price
                  .form-row
                    .col-12
                      .input-group.d-none{id: "form_price_#{price.id}"}
                        = f.text_field(:product_price,
                          required: true,
                          class: "form-control rounded-left")
                        .input-group-append
                          = f.button(class: "btn btn-primary btn-sm btn-block rounded-right",
                            name: "commit",
                            "data-disabled-with"=>t('prices.save'), value: t('prices.save')) do
                            = t('prices.save')
              %td.text-right
                %button.btn.btn-success{onclick: "show_hide_edit_form(this)", type: "button",
                  form_target: "form_price_#{price.id}", title_target: "title_price_#{price.id}"}
                  %i.fas.fa-edit.fa-xs
                %button.btn.btn-danger{onclick: "show_confirmation_modal(this)", type: "button",
                  action: price_path(product), method: :delete}
                  %i.fas.fa-trash.fa-xs
      = paginate @products
    - else
      .text-center.text-muted.mt-5
        %h2
          = t('.no_results_found')
= javascript_pack_tag "prices/index", media: "all", "data-turbolinks-track": "reload"