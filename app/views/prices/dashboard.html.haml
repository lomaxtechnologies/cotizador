 
.row
  .col-2.offset-md-1
    %h2= t('.title')
  .col-6
  .col-1
    = link_to prices_path do
      %i.fas.fa-undo
      = t('materials.return')
.row
  .col-md-12.col-lg-10.offset-lg-1
    %h5= t('.new_material_text')
    .tableFixeHead
      - if @products.length > 0
        %table.table.table-sm.table-striped
          %thead
            %tr.bg-primary.text-light
              %th= t('prices.code')
              %th= t('prices.material')
              %th= t('prices.description')
              %th= t('prices.price')
          %tbody
            - @products.each do |product|
              %tr
                %td= product.code
                %td= product.material.name
                %td= product.material.description
                %td= product.price.product_price
      - else
        
             