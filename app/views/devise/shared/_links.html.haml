- if controller_name != 'sessions'
  = link_to t('users.registrations.account.login'), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('users.registrations.account.register'), new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('users.registrations.account.forgot_password'), new_user_password_path
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('users.registrations.account.reset_email_not_received'), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('users.registrations.account.unlock_email_not_received'), new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to t('users.registrations.account.omniauth',provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider)
    %br/
