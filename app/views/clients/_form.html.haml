.card.card-body
  = form_for @client do |f|
    -# if @client.errors.any?
      #error_explanation
        %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
        %ul
          - @client.errors.full_messages.each do |message|
            %li= message
    .form-row.mb-2
      = f.label :name, class:"mb-0 text-primary font-weight-bold"
      = f.text_field :name, :required => true, class: "form-control form-control-sm"
    .form-row.mb-2
      = f.label :address, class: "mb-0 text-primary font-weight-bold"
      = f.text_area :address, class: "form-control form-control-sm"
    .form-row.mb-2
      .col-6
        = f.label :nit, class: "mb-0 text-primary font-weight-bold"
        = f.phone_field :nit, class: "form-control form-control-sm"
      .col-6
        = f.label :phone, class: "mb-0 text-primary font-weight-bold"
        = f.telephone_field :phone, class: "form-control form-control-sm"
    .form-row.actions.text-right
      .col-12
        = f.submit t('.save'), class: "btn btn-primary btn-sm px-2"
