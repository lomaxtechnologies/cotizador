= javascript_pack_tag "clients/index", media: "all", "data-turbolinks-track": "reload"
= render partial: "confirmation_modal"
.row
  .col-lg-12.offset-xl-1.col-xl-10
    .form-row
      .col-12
        .card
          .card-header
            .row
              .col-8
                %h4.text-primary 
                  %b= t('.title')
              .col-4.text-right
                = link_to t('.new'), new_client_path, class: "btn btn-primary"
          .card-body
            .form-row.mb-2
              .col-12
                %b.font-size-search= t('clients.index.search_title')
            = search_form_for @q, url: clients_path do |f|
              %input{type: :hidden, name: :page_size, value: @page_size}
              .form-row
                .col-10
                  %b.color-search-title= t('clients.index.search_name')
                  .input-group-prepend
                    .input-group-text
                      %i.fas.fa-user-alt
                    = f.text_field :name_cont, class: 'form-control'
                .col-2.text-right.button-margin-top
                  %button.btn-block.btn.btn-purple{ type: "submit", value: "Search"}
                    %i.fas.fa-search.fa-sm
                    = t('clients.search')
    - if @clients.length > 0
      %table.table.table-sm.table-striped
        %thead
          %tr.bg-primary.text-light
            %th= t('clients.name')
            %th= t('clients.address')
            %th= t('clients.nit')
            %th= t('clients.phone')
            %th.text-right
              %input{type: :number, min: 0, 
                class: "form-control-sm", 
                placeholder: t('.page_size_placeholder'), 
                onchange: "set_page_size(this)",
                value: @page_size}
        %tbody#clients-body
        - @clients.each do |client|
          %tr
            %td 
              %span{id: "title_client_#{client.id}"}= client.name
            %td 
              %span{id: "title_client_#{client.id}"}= client.address
            %td 
              %span{id: "title_client_#{client.id}"}= client.nit
            %td 
              %span{id: "title_client_#{client.id}"}= client.phone
            %td.text-right
              %button.btn.btn-success.btm.padding-0
                = link_to edit_client_path(client) do
                  %i.fas.fa-edit.fa-xs.text-white.btm-sm.height-width-buttom
              %button.btn.btn-danger.btm-sm.padding-0{onclick: "show_confirmation_modal(this)",
                action: client_path(client),
                method: :delete}
                %i.fas.fa-trash-alt.fa-xs.text-white.height-width-buttom
      = paginate @clients
    - else
      .text-center.text-muted.mt-5
        %h2= t('clients.index.no_results_found')
        %br
        = image_tag "lomax-logo.png", class: 'logo-without-results'
