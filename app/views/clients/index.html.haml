.row
  .col 
    .form-row.mb-3
      .col-2.my-auto
        %h4.text-primary Clientes
      .col-8
        = search_form_for @q do |f|
          .input-group
            = f.text_field :name_cont, class: 'form-control'
            %span.input-group-btn
              %button.btn.border-dark{ :name => "commit", :type => "submit", :value => "Search"}
                %i.fas.fa-search
      .col-2.text-right
        = link_to 'Nuevo Cliente', new_client_path, class: "btn btn-primary"
    %table.table.table-sm.table-striped
      %thead
        %tr.bg-primary.text-light
          %th Cliente
          %th Dirección
          %th Nit
          %th Teléfono
          %th
      %tbody
        %tr
        - @clients.each do |client|
          %tr
            %td= client.name
            %td= client.address
            %td= client.nit
            %td= client.phone
            %td.text-right
              %button.btn.btn-success.btm-sm
                = link_to edit_client_path(client) do
                  %i.fas.fa-edit.fa-xs.text-white
              %button.btn.btn-danger.btm-sm
                = link_to client, method: :delete, data: { confirm: '¿Estas seguro de eliminarlo' } do
                  %i.fas.fa-trash-alt.fa-xs.text-white
    = paginate @clients
