.row
  .col-12.col-md-10.offset-md-1
    .form-row.mb-3
      .col-2.my-auto
        %h4.text-primary= t('.servicetitle')
      .col-8
        .input-group.mb-3
          .input-group-prepend
            .input-group-text.border-dark
              %i.fas.fa-search
          %input.form-control.form-control-sm.border.border-dark{placeholder: t('.search') }
      .col-2
        = link_to t('.newservice'), new_service_path, class: "btn btn-primary btn-sm"
%table.table.table-sm.table-striped
  %thead
    %tr.bg-primary.text-light
      %th= t('.name')
      %th= t('.description')
      %th= t('.actual_price')
      %th
      %th




  %tbody
    - @services.each do |service|
      %tr
        %td= service.name
        %td= service.description
        %td= service.creation_price
        %td
        %td.text-center
          %button.btn.btn-success.btm-sm
            = link_to edit_service_path(service) do
              %i.fas.fa-edit.fa-xs.text-white
          %button.btn.btn-danger.btm-sm
            %i.fas.fa-trash-alt.fa-xs


%br
