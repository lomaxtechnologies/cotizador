.card.card-body
  = form_with scope: :user, url: users_registration_path, method: :put do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .form-row.mb-2
      = f.label  "Nombre(s)", class:"mb-0 text-primary font-weight-bold", for:"user_detail_name"
      %input{class: "form-control form-control-sm",
        name:"user_detail[name]",
        id:"user_detail_name",
        value: @user.user_detail.name}
    .form-row.mb-2
      = f.label  "Apellidos(s)", class:"mb-0 text-primary font-weight-bold", for:"user_detail_last_name"
      %input{class: "form-control form-control-sm",
        name:"user_detail[last_name]",
        id:"user_detail_last_name",
        value: @user.user_detail.last_name}
    .form-row.mb-2
      = f.label  "Teléfono", class:"mb-0 text-primary font-weight-bold", for:"user_detail_phone"
      %input{class: "form-control form-control-sm",
        name:"user_detail[phone]",
        id:"user_detail_phone",
        value: @user.user_detail.phone}
    .form-row.mb-2
      .col-6
        = f.label :email, "Correo Electrónico", class: "mb-0 text-primary font-weight-bold"
        = f.email_field :email, class: "form-control form-control-sm", readonly: true
      .col-6
        = f.label :user_type, "Tipo de Usuario", class: "mb-0 text-primary font-weight-bold"
        %select.form-control.form-control-sm{ name: "user[role_id]", id: "user_role_id" }
          = options_from_collection_for_select(Role.all, :id, :name)
    .form-row.actions
      .col-6
        %button.btn.btn-danger.btn-sm Reiniciar Contraseña
      .col-6.text-right
        = f.submit 'Guardar', class: "btn btn-primary btn-sm px-2"