.card.card-body
  = form_with scope: :user, url: users_registrations_path do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .form-row.mb-2
      .col-4.offset-4.text-center
        .i.fas.fa-portrait.fa-10x
    .form-row.mb-2
      = f.label :name, class:"mb-0 text-primary font-weight-bold"
      = f.text_field :name, class: "form-control form-control-sm"
    .form-row.mb-2
      .col-6
        = f.label :email, class: "mb-0 text-primary font-weight-bold"
        = f.email_field :email, class: "form-control form-control-sm"
      .col-6
        = f.label :user_type,  class: "mb-0 text-primary font-weight-bold"
        %span.form-control.form-control-sm Administrador
    .form-row.mb-2
      = f.label :password,  class: "mb-0 text-primary font-weight-bold"
      = f.password_field :password, class: "form-control form-control-sm"
    .form-row.mb-2
      = f.label :password_confirmation, class: "mb-0 text-primary font-weight-bold"
      = f.password_field :password_confirmation, class: "form-control form-control-sm"
    .form-row.actions.text-right
      .col-12
        = f.submit t('users.save'), class: "btn btn-primary btn-sm px-2"