.card.card-body
  = form_for @measure_unit do |f|
    - if @measure_unit.errors.any?
      #error_explanation
        %h2= "#{pluralize(@measure_unit.errors.count, "error")} prohibited this measure_unit from being saved:"
        %ul
          - @measure_unit.errors.full_messages.each do |message|
            %li= message
    .form-row.mb-2
      .col-6
        = f.label :name,  class:"mb-0 text-primary font-weight-bold"
        = f.text_field :name, class: "form-control form-control-sm"
      .col-6
        = f.label :unit_type,  class: "mb-0 text-primary font-weight-bold"
        %select.form-control.form-control-sm
          %option{ value: "1" } Unidad
          %option{ value: "2" } Longitud
          %option{ value: "3" } Peso
          %option{ value: "4" } Volumen
    .form-row.actions.text-right
      .col-12
        = f.submit t('measure_units.save'), class: "btn btn-primary btn-sm px-2"
-#
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :unit_type
    = f.text_field :unit_type
  .actions
    = f.submit 'Save'
