.card
  .card-header
    .row
      .col-6
        %h4.text-primary
          %b= t('measure_units.new.new_measure')
      .col-6.text-right
        = link_to measure_units_path do
          %i.fas.fa-undo
          = t('measure_units.return')
  .card-body
    = form_for @measure_unit do |f|
      .form-row.mb-2
        .col-6
          = f.label :name,  class:"mb-0 text-primary font-weight-bold"
          .input-group.mb-2
            .input-group-prepend
              .input-group-text
                %i.fas.fa-ruler-combined
            = f.text_field :name, :required => true, class: "form-control form-control-sm"
        .col-6
          = f.label :unit_type,  class: "mb-0 text-primary font-weight-bold "
          .input-group-prepend
            .input-group-text
              %i.fas.fa-balance-scale-right
            = f.select :unit_type, ([["Longitud"], ["Peso"], ["Volumen"]]).to_a, {:prompt => :unit_type}, {class:"form-control form-control-sm"}
      .form-row.actions.text-right
        .col-12
          = f.submit t('measure_units.save'), class: "btn btn-primary btn-sm px-2"

