.row
  .col-12.col-md-10.offset-md-1
    .form-row.mb-3
      .col-2.my-auto
        %h4.text-primary Materiales
      .col-8
        .input-group.mb-3
          .input-group-prepend
            .input-group-text.border-dark
              %i.fas.fa-search
          %input.form-control.form-control-sm.border.border-dark{placeholder: "Buscar Material" }
      .col-2
        = link_to 'Nuevo Material', new_material_path, class: "btn btn-primary btn-sm"
    %table.table.table-sm.table-striped
      %thead
        %tr.bg-primary.text-light
          %th Material
          %th Unidad de Medida
          %th
      %tbody
        %tr
          %td Cable categoría 6 A F/FTP
          %td Metro, Caja, Bobina
          %td.text-right
            %button.btn.btn-success.btm-sm
              = link_to new_material_path do
                %i.fas.fa-edit.fa-xs.text-white
            %button.btn.btn-danger.btm-sm
              %i.fas.fa-trash-alt.fa-xs
        %tr
          %td Cable de fibra óptica multimodo OM4 unitubo
          %td Metro, Caja
          %td.text-right
            %button.btn.btn-success.btm-sm
              = link_to new_material_path do
                %i.fas.fa-edit.fa-xs.text-white
            %button.btn.btn-danger.btm-sm
              %i.fas.fa-trash-alt.fa-xs
        %tr
          %td Canaletas
          %td Unidades
          %td.text-right
            %button.btn.btn-success.btm-sm
              = link_to new_material_path do
                %i.fas.fa-edit.fa-xs.text-white
            %button.btn.btn-danger.btm-sm
              %i.fas.fa-trash-alt.fa-xs
        -# @clients.each do |client|
          %tr
            %td= client.name
            %td= client.address
            %td= client.nit
            %td= client.phone
            %td= link_to 'Show', client
            %td= link_to 'Edit', edit_client_path(client)
            %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }

